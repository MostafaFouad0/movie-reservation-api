generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  age       Int
  role      String
  email     String
  password  String
  createdAt DateTime @default(now())
  active    Boolean  @default(true)
  ticket    ticket[]
}

model movie {
  id             Int        @id @default(autoincrement())
  title          String
  description    String
  genre          String
  age_restricted Boolean
  poster         String
  duration       Int
  release_date   String
  end_date       String
  showtime       showtime[]
}

model hall {
  id                Int          @id @default(autoincrement())
  title             String       @unique
  vip_seats_cnt     Int
  regular_seats_cnt Int
  showtime          showtime[]
  hall_seats        hall_seats[]
  ticket            ticket[]
}

model showtime {
  id                 Int                @id @default(autoincrement())
  showtime_hall      hall               @relation(fields: [hall_id], references: [id])
  hall_id            Int
  showtime_movie     movie              @relation(fields: [movie_id], references: [id])
  movie_id           Int
  showtime_start     String
  showtime_end       String
  vip_seat_price     Int
  regular_seat_price Int
  showtime_details   showtime_details[]
  deleted            Boolean            @default(false)
  ticket             ticket[]
}

model hall_seats {
  id        Int      @id @default(autoincrement())
  hall_seat hall     @relation(fields: [hall_id], references: [id])
  hall_id   Int
  seat_type String
  ticket    ticket[]
}

model ticket {
  id                Int        @id @default(autoincrement())
  user_ticket       user       @relation(fields: [user_id], references: [id])
  user_id           Int
  seat_ticket       hall_seats @relation(fields: [seat_id], references: [id])
  seat_id           Int
  hall_ticket       hall       @relation(fields: [hall_id], references: [id])
  hall_id           Int
  showtime_relation showtime   @relation(fields: [showtime_id], references: [id])
  showtime_id       Int
  showtime_date     String
  issued_date       DateTime   @default(now())
  expired           Boolean
  price             Int
}

model showtime_details {
  showtime_relation showtime @relation(fields: [showtime_id], references: [id])
  showtime_id       Int
  showtime_date     String

  @@id([showtime_id, showtime_date])
}
